@using MudBlazor
<MudNavMenu Class="" Color="Color.Success">
    <MudText Typo="Typo.subtitle2" Color="Color.Success" Class="ml-4 my-3">Smart E-Card</MudText>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Filled.Dashboard">Dashboard</MudNavLink>
        <MudNavGroup Title="ID Cards" Expanded Icon="@Icons.Material.Filled.CardMembership">
        <MudNavLink Href="/cardrequests" Icon="@Icons.Material.Filled.AddCard" Class="fsh-nav-child">
                Requests
            </MudNavLink>
        <MudNavLink Href="/cards"  Icon="@Icons.Material.Filled.PhotoAlbum" Class="fsh-nav-child">
                Cards
            </MudNavLink>
        </MudNavGroup>
    @if (CanViewAdministrationGroup)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Success" Class="ml-4 my-3">Administration</MudText>
        @if (_canViewUsers)
        {
            <MudNavLink Match="NavLinkMatch.Prefix" Href="/users" Icon="@Icons.Material.Filled.PeopleAlt">Users</MudNavLink>
        }
        @if (_canViewRoles)
        {
            <MudNavLink Href="/roles" Icon="@Icons.Material.Filled.EmojiPeople">Roles</MudNavLink>
        }
    }
</MudNavMenu>
