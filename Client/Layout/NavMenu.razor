@using MudBlazor
<MudNavMenu Class="text-white-50">
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Smart E-Card</MudText>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Filled.Dashboard">Dashboard</MudNavLink>
        <MudNavGroup Title="Cards" Expanded Icon="@Icons.Material.Filled.CardMembership">
        <MudNavLink Href="/cardrequest/new" Icon="@Icons.Material.Filled.AddCard" Class="fsh-nav-child">
                 Make New Request
            </MudNavLink>
        <MudNavLink Href="/cardrequests" Icon="@Icons.Material.Filled.RequestQuote" Class="fsh-nav-child">
                Requests
            </MudNavLink>
        <MudNavLink Href="/cards/active" Icon="@Icons.Material.Filled.AssistantDirection" Class="fsh-nav-child">
                Active Cards
            </MudNavLink>
            <MudNavLink Href="/cards/inactive" Icon="@Icons.Material.Filled.AssistantDirection" Class="fsh-nav-child">
                Inactive Cards
            </MudNavLink>
        </MudNavGroup>
    @if (CanViewAdministrationGroup)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Administration</MudText>
        @if (_canViewUsers)
        {
            <MudNavLink Match="NavLinkMatch.Prefix" Href="/users" Icon="@Icons.Material.Filled.PeopleAlt">Users</MudNavLink>
        }
        @if (_canViewRoles)
        {
            <MudNavLink Href="/roles" Icon="@Icons.Material.Filled.EmojiPeople">Roles</MudNavLink>
        }
    }
</MudNavMenu>
