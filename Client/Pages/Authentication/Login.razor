@page "/login"
@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations
<div class="d-flex justify-center">
    <img src="idcard-image.png" Style="height:120px; border-radius:100%" />
</div>
<br />
<EditForm Model="@_tokenRequest" OnSubmit="Submit">
    <MudGrid>
        <MudItem xs="12">

            <MudTextField T="string" Label="Username" Required="true" RequiredError="User name is required!" @bind-Value="_tokenRequest.UserName"
                          For="@(() => _tokenRequest.UserName)" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField T="string" Label="Password"
                          InputType="InputType.Password"
                          @bind-Value="_tokenRequest.Password"
                          For="@(() => _tokenRequest.Password)"
                          Adornment="Adornment.End"
                          Required="true"
                          RequiredError="Password is required!" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success" Class="ml-auto">Login</MudButton>
        </MudItem>
        <MudItem xs="12" Class="d-flex justify-center">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Forget Password</MudButton>
        </MudItem>
    </MudGrid>
</EditForm>